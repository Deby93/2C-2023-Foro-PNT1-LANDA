@model Categoria

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Categoría</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Cantidad de Entradas
        </dt>
        <dd class="col-sm-10">
            @ViewBag.CantidadEntradas
        </dd>
    </dl>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.CategoriaId">Editar</a>
    </div>
}

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
