@model Categoria

@{
    ViewData["Title"] = "Borrar";
}
@if (User.IsInRole(Config.MiembroRolName))
{
    <h1 style="color: #A65341">Borrar</h1>

    <h3style ="color: #A65341">¿Quiere borrar esta categoría?</h3style>
    <div>
        <h4>Categoría</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CategoriaId" />
            <input type="submit" value="Borrar" class="btn btn-danger" />
            <a asp-action="Index">Volver a la lista</a>
        </form>
    </div>

}
