@model IEnumerable<MiembrosHabilitados>

@{
    ViewData["Title"] = "Solicitudes Pendientes";
}

<h1>Solicitudes Pendientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Entrada</th>
            <th>Miembro</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var solicitud in Model)
        {
            <tr>
                <td>@solicitud.Entrada.Titulo</td>
                <td>@solicitud.MiembroId</td>
                <td>
                    <a asp-controller="Entradas" asp-action="AprobarSolicitud" asp-route-id="@solicitud.EntradaId" class="btn btn-success">Aprobar</a>
                    <a asp-controller="Entradas" asp-action="RechazarSolicitud" asp-route-id="@solicitud.EntradaId" class="btn btn-danger">Rechazar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
