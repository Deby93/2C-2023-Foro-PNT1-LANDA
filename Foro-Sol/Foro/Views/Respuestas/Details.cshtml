@using Foro.Models
@using Foro.Controllers
@using Foro.ViewModels

@model Foro.Models.Respuesta

@{
    ViewData["Title"] = "Details";
}

<h1 style="color: #A65341">Detalles de la respuesta</h1>

<div>
    <h4>Respuesta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
          Email
        </dt>
        <dd class="col-sm-10">
            @Model.Miembro.Email
        </dd>
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.Fecha.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-2">
            Pregunta
        </dt>
        <dd class="col-sm-10">
            @Model.Pregunta.Descripcion
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated){
    <a asp-action="Edit" asp-route-id="@Model.RespuestaId">Editar</a> 
    <a asp-action="Index">Volver a la lista</a>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
