@model IEnumerable<Respuesta>

@{
    ViewData["Title"] = "Index";
}

<h1>Respuesta</h1>

<p>
    <a asp-action="Create">Crear una respuesta nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pregunta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Miembro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pregunta.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Miembro.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RespuestaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.RespuestaId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.RespuestaId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
