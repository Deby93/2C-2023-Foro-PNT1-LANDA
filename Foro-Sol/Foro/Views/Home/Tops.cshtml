@model Foro.ViewModels.Home
@{
    ViewData["Title"] = "Foro";
}

<div class="card col-md-12 mt-3 p-3">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header btn-primary">
                    <h3 class="text-center text-white">@Html.DisplayNameFor(model => model.Top5EntradasConMasPreguntaYRespuestas)</h3>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            @foreach (var item in Model.Top5EntradasConMasPreguntaYRespuestas.Take(5))
                            {
                                <div class="card mb-3">
                                    @if (User.IsInRole("Miembro"))
                                    {
                                        if (!item.MiembrosHabilitados.Any(am => am.MiembroId == Model.SesionUserId && am.EntradaId == item.Id) && (item.Privada ?? false) && item.MiembroId != Model.SesionUserId)
                                        {
                                            <div class="card-header">
                                                <p class="alert-success text-white">
                                                    Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha
                                                    <a class="btn btn-danger btn-sm m-1 text-white" asp-controller="MiembrosHabilitados" asp-action="Create" asp-route-entradaId="@item.Id">privado</a>
                                                </p>
                                            </div>
                                            <h5 class="card-title">@item.Titulo</h5>
                                            <p class="card-text">@item.Descripcion</p>
                                        }
                                        else if (item.MiembrosHabilitados.Any(am => am.MiembroId == Model.SesionUserId && am.EntradaId == item.Id && !am.Habilitado) && (item.Privada ?? false) && item.MiembroId != Model.SesionUserId)
                                        {
                                            <div class="card-header">
                                                <p class="alert-info">
                                                    Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha
                                                    <span><a class="btn btn-warning btn-sm m-1 text-white">privado: Autorización pendiente</a></span>
                                                </p>
                                            </div>
                                            <h5 class="card-title">@item.Titulo</h5>
                                            <p class="card-text">@item.Descripcion</p>
                                        }
                                        else if (item.MiembrosHabilitados.Any(am => am.MiembroId == Model.SesionUserId && am.EntradaId == item.Id && am.Habilitado) && (item.Privada ?? false) && item.MiembroId != Model.SesionUserId)
                                        {
                                            <div class="card-header">
                                                <p class=" text-white">
                                                    Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha
                                                    <span><a class="btn btn-success btn-sm m-1 text-white">privado: autorizado</a></span>
                                                </p>
                                            </div>
                                            <a asp-controller="Entradas" asp-action="Details" asp-route-id="@item.Id">
                                                <h5 class="card-title">@item.Titulo</h5>
                                            </a>
                                            <p class="card-text">@item.Descripcion</p>
                                        }
                                        else if (User.IsInRole("Miembro") && item.MiembroId == Model.SesionUserId)
                                        {
                                            <div class="card-header">
                                                <p class="alert-info">
                                                    Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha
                                                    <span><a class="btn btn-info btn-sm m-1 text-white">Mis entradas</a></span>
                                                </p>
                                            </div>
                                            <a asp-controller="Entradas" asp-action="Details" asp-route-id="@item.Id">
                                                <h5 class="card-title">@item.Titulo</h5>
                                            </a>
                                            <p class="card-text">@item.Descripcion</p>
                                        }
                                        else
                                        {
                                            if (User.IsInRole("Miembro") && item.MiembroId != Model.SesionUserId && !(item.Privada ?? false))
                                            {
                                                <div class="card-header">
                                                    <p class="alert-info">Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha</p>
                                                </div>
                                                <a asp-controller="Entradas" asp-action="Details" asp-route-id="@item.Id">
                                                    <h5 class="card-title">@item.Titulo</h5>
                                                </a>
                                                <p class="card-text">@item.Descripcion</p>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        if (!(item.Privada ?? false))
                                        {
                                            <div class="card-header alert-info py-2">
                                                <a asp-controller="Entradas" asp-action="Details" asp-route-id="@item.Id">
                                                    <h4 class="card-title mt-1">@item.Titulo</h4>
                                                </a>
                                            </div>
                                            <p class="card-text ml-3 mt-2">@item.Descripcion</p>
                                            <div class="card-footer text-muted py-0">
                                                <small class="card-text">Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha</small>
                                            </div>
                                        }
                                        else if (User.IsInRole("Usuario"))
                                        {
                                            <div class="card-header">
                                                <p class="alert-info">
                                                    Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha
                                                    <a class="btn btn-danger btn-sm m-1 text-white">privado</a>
                                                </p>
                                            </div>
                                            <a asp-controller="Entradas" asp-action="Details" asp-route-id="@item.Id">
                                                <h5 class="card-title">@item.Titulo</h5>
                                            </a>
                                            <p class="card-text">@item.Descripcion</p>
                                        }
                                        else
                                        {
                                            <div class="card-header">
                                                <p class="alert-info">
                                                    Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha
                                                    <a class="btn btn-danger btn-sm m-1 text-white" asp-controller="MiembrosHabilitados" asp-action="Create" asp-route-entradaId="@item.Id">privado</a>
                                                </p>
                                            </div>
                                            <a asp-controller="Entradas" asp-action="Details" asp-route-id="@item.Id">
                                                <h5 class="card-title">@item.Titulo</h5>
                                            </a>
                                            <p class="card-text">@item.Descripcion</p>
                                        }
                                    }
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h1 class="btn-primary text-center text-white">@Html.DisplayNameFor(model => model.Top5EntradasMasRecientes)</h1>
