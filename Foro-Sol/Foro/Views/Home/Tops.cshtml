                                            {
                                                <p class="alert-info">
                                                    Publicado por: @item.Miembro.NombreCompleto el: @item.Fecha
                                                    <span><a class="btn btn-success btn-sm m-1 text-white">privado: autorizado</a></span>
                                                </p>
                                                <a asp-controller="Entradas" asp-action="Details" asp-route-id="@item.Id">
                                                    <h2 class="post-title">@item.Titulo</h2>
