@model Reaccion

@{
    ViewData["Title"] = "Crear";
}

<h1 style="color: #A65341">Crear</h1>

<h4>Reacción</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RespuestaId" class="control-label"></label>
                <select asp-for="RespuestaId" class ="form-control" asp-items="ViewBag.RespuestaId"></select>
            </div>
          
         
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeGusta" /> @Html.DisplayNameFor(model => model.MeGusta)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
