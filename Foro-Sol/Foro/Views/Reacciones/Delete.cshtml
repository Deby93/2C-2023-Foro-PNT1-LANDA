@model Reaccion

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>

<h3>¿Quieres borrar a esta reacción?</h3>
<div>
    <h4>Reacción</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Respuesta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Respuesta.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Miembro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Miembro.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MeGusta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MeGusta)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RespuestaId" />
        <input type="hidden" asp-for="MiembroId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
